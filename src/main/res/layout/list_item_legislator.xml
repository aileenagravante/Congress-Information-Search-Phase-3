<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_legislator_img"
        android:layout_width="70dp"
        android:layout_height="86dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView_legislator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageView_legislator_img"
        android:layout_toRightOf="@+id/imageView_legislator_img"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView_legislator_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView_legislator_name"
        android:padding="5dp"
        app:srcCompat="@drawable/arrow_right" />

    <TextView
        android:id="@+id/textView_legislator_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_legislator_name"
        android:layout_toEndOf="@+id/imageView_legislator_img"
        android:layout_toRightOf="@+id/imageView_legislator_img" />

</RelativeLayout>